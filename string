#include<stdio.h>
int main()
{
    char s1[] = "sovon";
    int i = 0;
    while(s1[i]!='\0')
    {

          printf("%c\n",s1[i]);
        i++;

    }
}




#include<stdio.h>
int main()
{
    char s1[]= "Shohidul islam sovon";


    int len = strlen(s1);
    printf(" Length  : %d  ",len);
}




#include<stdio.h>
int main()
{
    char s1[]= "Shohidul islam sovon";
    int i=0, len=0;
    while(s1[i]!='\0')
    {

       i++;
       len++;
    }
    printf("length = %d ",len);

}

#include<stdio.h>
int main()
{
    char source[] = "C programming";
    char target[20];

    strcpy(target,source);
    printf("source string = %s\n",source);
    printf("target string =  %s\n",target);

}

//concatenation using strcat (adding)
include<stdio.h>
int main()
{
    char str1[] = "My name is ";
    char str2[] = "Shohidul islam sovon";

                  strcat(str1, str2);
    printf("%s\n",str1);
    printf("%s\n",str2);

}

#include<stdio.h>
