//has a minoar bug ,actually  not bug but condition
#include<stdio.h>
int main()
{
 int row,col,n=4;
 for(row=1;row<=n;row++)
 {
 for(col=1;col<=row;col++)
 {

 printf("%c ",col+64);
   
 }
 printf("\n");
 }


 for(row=n-1;row>=1;row--)
 {
 for(col=1;col<=row;col++)
 {

 
 printf("%c ",col+64);
   
 }
 printf("\n");
 
 }

    return 0;
}
